<odoo>
    <data>
        <record id="view_categoria_form" model="ir.ui.view">
	    <field name="name">libreria.categoria.form</field>
	    <field name="model">libreria.categoria</field>
	    <field name="arch" type="xml">
		<form>
		    <group>
			<field name="name"/>
			<field name="descripcio"/>
		    </group>
		</form>
	    </field>
	</record>
	
	<record id="view_libro_form" model="ir.ui.view">
	    <field name="name">libreria.libro.form</field>
	    <field name="model">libreria.libro</field>
	    <field name="arch" type="xml">
		<form>
		    <group>
			<field name="name"/>
			<field name="precio"/>
			<field name="ejemplares"/>
			<field name="rotura_estoc" readonly="1"/>
			<field name="data"/>
			<field name="segonama"/>
			<field name="estado"/>
		    </group>
		</form>
	    </field>
	</record>
    </data>
</odoo>
